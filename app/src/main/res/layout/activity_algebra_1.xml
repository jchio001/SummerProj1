<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jonathanchiou.educate.Algebra_1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Equations With Variables"
        android:id="@+id/Alg1_EWV"
        android:onClick="to_Lessons"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Alg1_V"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Variables"
        android:onClick="to_Lessons" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Alg1_PEMDAS"
        android:onClick="to_Lessons"
        android:layout_below="@+id/Alg1_V"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="PEMDAS" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balancing Equations"
        android:id="@+id/Alg1_BE"
        android:layout_below="@+id/Alg1_EWV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="to_Lessons" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System of Equations"
        android:id="@+id/Alg1_SoE"
        android:layout_below="@+id/Alg1_BE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="to_Lessons"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder1"
        android:id="@+id/button7"
        android:layout_below="@+id/Alg1_SoE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder2"
        android:id="@+id/button9"
        android:layout_below="@+id/button7"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder3"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
