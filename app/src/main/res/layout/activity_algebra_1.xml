<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jonathanchiou.educate.Algebra_1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/scrollView7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Alg1_V"
                android:layout_alignParentStart="true"
                android:text="Variables"
                android:onClick="to_Lessons"
                android:layout_below="@+id/Alg1_EWV"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Alg1_PEMDAS"
                android:onClick="to_Lessons"
                android:layout_alignParentStart="true"
                android:text="PEMDAS"
                android:layout_below="@+id/Alg1_V"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equations With Variables"
                android:id="@+id/Alg1_EWV"
                android:onClick="to_Lessons"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balancing Equations"
                android:id="@+id/Alg1_BE"
                android:layout_alignParentStart="true"
                android:onClick="to_Lessons"
                android:layout_below="@+id/Alg1_PEMDAS"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linear Equations and Word Problems"
                android:id="@+id/Alg1_LEaWP"
                android:layout_alignParentStart="true"
                android:onClick="to_Lessons"
                android:nestedScrollingEnabled="false"
                android:layout_below="@+id/Alg1_BE"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Alg1_SoE"
                android:layout_alignParentStart="true"
                android:text="System of Equations"
                android:onClick="to_Lessons"
                android:layout_below="@+id/Alg1_SoE"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder1"
                android:id="@+id/button9"
                android:layout_below="@+id/button7"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder2"
                android:id="@+id/button10"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button9"
                android:layout_alignParentLeft="true" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lessons"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Helpful Links"
        android:id="@+id/textView14"
        android:layout_below="@+id/scrollView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:clickable="true"
        android:src="@drawable/khanacademy"
        android:id="@+id/imageView5"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_Open_Link" />

</RelativeLayout>
