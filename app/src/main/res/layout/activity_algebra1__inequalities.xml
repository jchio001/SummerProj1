<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jonathanchiou.educate.Algebra1_Lessons.Algebra1_Inequalities">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/button15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_Ineq" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView11"
        android:layout_below="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alg1_inequalities"
                android:id="@+id/alg1_ineq1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:id="@+id/numline1"
                android:src="@drawable/numberline1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alg1_inequalities1"
                android:id="@+id/alg1_ineq2" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:id="@+id/numline2"
                android:src="@drawable/numberline2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alg1_inequalities2"
                android:id="@+id/alg1_ineq3" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:id="@+id/numline3"
                android:src="@drawable/numberline3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alg1_inequalities3"
                android:id="@+id/alg1_ineq4" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:id="@+id/numline4"
                android:src="@drawable/numberline4" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
